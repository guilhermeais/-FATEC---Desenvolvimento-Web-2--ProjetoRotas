<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
  
  <div class="carousel-indicators">
    <% carouselItems.forEach((item, index) => { %>
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="<%= index %>" class="<%= item.active?'active':'' %>" aria-current="<%= item.active?'true':'false' %>" aria-label="Slide <%= index+1 %>"></button>
   
      <% }) %>
  
  </div>
  <div class="carousel-inner">
    <% carouselItems.forEach(item => { %>
     
        <div onclick="window.open(' <%= item.link %> ', '_blank')" class="carousel-item <%= item.active?'active':'' %> shadow border p-4 rounded" style="cursor: pointer; object-fit: scale-down;" data-bs-interval="5000">
          <img width="350" height="500"  style="object-fit: contain;" src="<%= item.image %> " class="d-block w-100" alt="<%= item.alt %> ">
          <div class="carousel-caption d-none bg-light bg-gradient d-md-block rounded shadow-sm">
            <h5> <%= item.title %>  </h5>
            <p> <%= item.description %>  </p>
          </div>
        </div>
    
    <% }) %>
  
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>